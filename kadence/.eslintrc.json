{
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "comma-dangle": "off",
        "class-methods-use-this": "off",
        "linebreak-style": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "no-underscore-dangle": "off",
        "react/no-unescaped-entities": "warn"
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "next/core-web-vitals",
        "prettier"
    ],
    "plugins": ["jest"],
    "env": {
        "jest/globals": true
    },
    "settings": {
        "import/resolver": {
            "alias": [
                ["@/styles", "./styles"],
                ["@/components", "./components"]
            ]
        }
    }
}
