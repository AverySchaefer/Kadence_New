{
  "rules": {
    "comma-dangle": "off",
    "class-methods-use-this": "off",
    "linebreak-style": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "react/no-unescaped-entities": "warn"
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "prettier",
    "next/core-web-vitals"
  ],
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["@/styles", "./styles"],
        ["@/components", "./components"]
      ]
    }
  }
}
